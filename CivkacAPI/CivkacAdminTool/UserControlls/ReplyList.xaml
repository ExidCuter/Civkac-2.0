<UserControl x:Class="CivkacAdminTool.UserControlls.ReplyList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CivkacAdminTool.UserControlls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListView x:Name="RepliesList">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" Width="30" DisplayMemberBinding="{Binding Id}" />
                    <GridViewColumn Header="Post ID" Width="120" DisplayMemberBinding="{Binding Post.Id}" />
                    <GridViewColumn Header="User" Width="120" DisplayMemberBinding="{Binding User.Handle}" />
                    <GridViewColumn Header="Text" Width="320" DisplayMemberBinding="{Binding Text}" />
                </GridView>
            </ListView.View>
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Edit" Click="EditClicked"/>
                    <MenuItem Header="Delete" Click="DeleteClicked"/>
                </ContextMenu>
            </ListView.ContextMenu>
        </ListView>
    </Grid>
</UserControl>
